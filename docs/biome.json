{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"json": {
		"linter": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"trailingCommas": "all"
		},
		"parser": {
			"allowComments": true
		}
	},
	"formatter": {
		"ignore": [".gyoza", "node_modules", ".codepark", ".config", ".vscode"],
		"enabled": true
	},
	"linter": {
		"ignore": [".gyoza", "node_modules", ".codepark", ".config", ".vscode"],
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
