{
	"compilerOptions": {
		"allowArbitraryExtensions": true,
		"allowJs": true,
		"module": "ESNext",
		"declaration": true,
		"composite": true,
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"target": "ESNext",
		"jsx": "preserve"
	},
	"include": [
		"types/**/*.d.ts"
	]
}